                </div>

                <div class="input-field">
                    <label>Employement Status</label>
                    <select name="empstatus">
                        <option disabled selected>Select Mode</option>
                        <option name="empstatus">Permanent</option>
                        <option name="empstatus">Contract</option>
                        <option name="empstatus">Referral</option>
                        <option name="empstatus">Trainee</option>
                        <option name="empstatus">Relieved</option>
                        <option name="empstatus">Others</option>
                    </select>
                </div>
